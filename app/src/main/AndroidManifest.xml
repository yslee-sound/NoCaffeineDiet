<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoCaffeineDiet"
        tools:targetApi="31">

        <!-- 메인 액티비티 (시작 화면) -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.start.StartActivity"
            android:exported="true"
            android:theme="@style/Theme.NoCaffeineDiet.Splash"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 기록 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.records.RecordsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 모든 기록 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.records.AllRecordsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 레벨 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.level.LevelActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 설정 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.settings.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 노카페인 진행 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.run.RunActivity"
            android:exported="false"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 노카페인 종료 확인 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.run.QuitActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 세부 기록 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.detail.DetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 별명 편집 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.profile.NicknameEditActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 사용자 기록 추가 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.addrecord.AddRecordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 앱 정보 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.about.AboutActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

        <!-- 오픈 라이선스 상세 화면 -->
        <activity
            android:name="com.sweetapps.nocaffeinediet.feature.about.AboutLicensesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoCaffeineDiet" />

    </application>

</manifest>
